material PlayerMarker {
	receive_shadows off
	technique {
		// stuff that shows through when hidden behind walls and roofs
		pass {
			lighting off
			fog_override true none

			depth_write off
			depth_check on
			depth_func greater
			cull_hardware none
			cull_software none

			scene_blend alpha_blend

			texture_unit {
				texture playermarker.png
				tex_address_mode clamp
			}

			vertex_program_ref MarkerGhostVP {	
			}

			fragment_program_ref MarkerGhostFP {
			}

		} 

		pass {
			lighting off
			ambient vertexcolour
			diffuse vertexcolour

			cull_hardware none
			cull_software none        

			scene_blend alpha_blend

			depth_write off

			texture_unit {
				texture playermarker.png
				tex_address_mode clamp
			}
		} 
	}
}

