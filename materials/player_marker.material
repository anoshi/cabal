material SquadAIMarker {
	receive_shadows off
	technique {
		// stuff that shows through when hidden behind walls and roofs
		pass {
			lighting on
			depth_write off
			depth_check on
			depth_func greater
			cull_hardware none
			cull_software none
			alpha_rejection greater 16

			texture_unit {
				texture squad_ai_marker.png
				tex_address_mode clamp
			}
		} 

		pass {
			lighting off
			//ambient 1.0 1.0 1.0 1.0
			//diffuse 1.0 1.0 1.0 1.0 
			//lighting on
			ambient vertexcolour
			diffuse vertexcolour

			cull_hardware none
			cull_software none        
			//alpha_rejection greater 32
			scene_blend alpha_blend

			depth_write off

			texture_unit {
				texture squad_ai_marker.png
				tex_address_mode clamp
			}
		} 
	}
}


material SquadCommandTargetMarker {
	receive_shadows off
	technique {
		// stuff that shows through when hidden behind walls and roofs
		pass {
				lighting on
				depth_write off
				depth_check on
			depth_func greater
			cull_hardware none
			cull_software none
			scene_blend alpha_blend

				texture_unit {
				texture command_marker.png 2d 0
				tex_address_mode clamp
					wave_xform scale_x sine 0.5 0.4 0.0 0.5
					wave_xform scale_y sine 0.5 0.4 0.0 0.5
				rotate_anim 0.1
			}

		} 

		pass {
			lighting off
			ambient 1.0 1.0 1.0 1.0
			diffuse 1.0 1.0 1.0 1.0 
			//lighting on

			cull_hardware none
			cull_software none        
			scene_blend alpha_blend

			depth_write off

			texture_unit {
				texture command_marker.png 2d 0
				tex_address_mode clamp
					wave_xform scale_x sine 0.5 0.4 0.0 0.5
					wave_xform scale_y sine 0.5 0.4 0.0 0.5
				rotate_anim 0.1
			}
		} 
	}
}



