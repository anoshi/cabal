material SquadCommandTargetMarkerVehicle {
	receive_shadows off
	technique {
		// stuff that shows through when hidden behind walls and roofs
/*
		pass {
				lighting on
				depth_write off
				depth_check on
			depth_func greater
			cull_hardware none
			cull_software none
			scene_blend alpha_blend

				texture_unit {
				texture squad_marker_vehicle.png
				tex_address_mode clamp
			}

		} 
*/

		pass {
			lighting off
			ambient 1.0 1.0 1.0 1.0
			diffuse 1.0 1.0 1.0 1.0 
			//lighting on

			cull_hardware none
			cull_software none        
			scene_blend alpha_blend

			depth_write off
			depth_check off

			texture_unit {
				texture squad_marker_vehicle.png
				tex_address_mode clamp
			}
		}


		pass Icon {
			lighting off
			ambient 1.0 1.0 1.0 1.0
			diffuse 1.0 1.0 1.0 1.0 
			//lighting on

			cull_hardware none
			cull_software none        
			scene_blend alpha_blend

			depth_write off
			depth_check off

				texture_unit {
				texture squad_marker_vehicle_iconmask.png
				tex_address_mode clamp
				colour_op_ex source1 src_current src_current
				alpha_op_ex source1 src_texture	src_current
			}

				texture_unit Icon {
				texture mapview_vehicle.png
				tex_address_mode clamp
				//colour_op_ex blend_current_alpha src_texture src_current
			}

		} 
	}

}







